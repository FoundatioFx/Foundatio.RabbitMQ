{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "args": [
        "build",
        "${workspaceFolder}/Foundatio.RabbitMQ.sln",
        "/p:GenerateFullPaths=true"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "test",
      "command": "dotnet",
      "type": "process",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "args": [
        "test",
        "${workspaceFolder}/tests/Foundatio.RabbitMQ.Tests/Foundatio.RabbitMQ.Tests.csproj",
        "/p:GenerateFullPaths=true"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "pack", 
      "command": "dotnet pack -c Release -o ${workspaceFolder}/artifacts",
      "type": "shell",
      "problemMatcher": []
    },
    {
      "label": "docker: rabbitmq",
      "command": "docker compose up",
      "type": "shell",
      "isBackground": true,
      "group": "test",
      "problemMatcher": []
    }
  ]
}